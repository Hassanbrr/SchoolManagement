@using Microsoft.AspNetCore.Mvc.TagHelpers
@model List<Domain.Models.Classroom >
<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="--bs-primary">

                Classroom List
            </h2>
        </div>
        <div class="col-6 text-end pt-6">
            <a asp-controller="Classroom" asp-action="Create" class="btn btn-dark"><i class="bi bi-plus-circle"></i> Create New Classroom</a>
        </div>
    </div>

    
    <table class="table table-bordered table-striped">
        <thead>
        <tr>
            <th>
                Classroom Name
            </th>
            <th>
                School Name
            </th>
            <th>
                Setting
            </th>

        </tr>
        </thead>
        <tbody>

        @foreach (var obj in Model.OrderBy(u => u.Id))
        {
            <tr>
                <td>
                    @obj.ClassName
                    
                </td>
                <td>
                  
                  @obj.SchoolId

                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Classroom" asp-action="Edit" class="btn btn-primary mx-2" asp-route-id="@obj.Id"><i class="fas fa-pen"></i>Edit</a>
                        <a asp-controller="Classroom" asp-action="Delete" class="btn btn-danger mx-2 " asp-route-id="@obj.Id"><i class="fas fa-trash"></i>Delete</a>
                        <a asp-controller="Student" asp-action="Index" class="btn btn-success mx-2 " asp-route-id=""><i class="fas fa-list"></i>Details</a>
                    </div>
                </td>
            </tr>
        }
     
        
        </tbody>

    </table>
</div> 
 