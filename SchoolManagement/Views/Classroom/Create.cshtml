@model Domain.Models.Classroom

<form method="post" action="">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 cite="text-black"> Create Category </h2>
        </div>
            <hr />
    </div>
    <div class="mb-3">
        <label asp-for="ClassName"></label>
        <input asp-for="ClassName" class="form-control" />
        <span asp-validation-for="ClassName" class="text-danger"></span>
    </div> 
   
    <div class="row">
        <div class="col-6">
            <button type="submit" class="btn btn-dark form-control"  >Create</button>

        </div>
        <div class="col-6">
            <a asp-controller="Classroom" asp-action="Index" class="btn btn-danger form-control" >
                Back to List
            </a>
        </div>
    </div>
   
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}